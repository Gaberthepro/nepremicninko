<style>

.form-signin{
  margin:auto;
  width:25%;
  margin-top:10%;
}

</style>

<main class="form-signin">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <h1 class="h3 mb-3 fw-normal" align=center>Prijava</h1>

    <%= f.email_field :email, autofocus: true, autocomplete: "current-email", class: "form-control", placeholder: "Email", id: "inputEmail" %><br>

    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Geslo", id: "inputPassword" %>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

    <div class="actions">
      <%= f.submit "Prijavi me", class: "w-100 btn btn-lg btn-primary" %>
    </div>

<% end %>
<div align=center>
    <%= render "devise/shared/links" %>
<div>
</main>
